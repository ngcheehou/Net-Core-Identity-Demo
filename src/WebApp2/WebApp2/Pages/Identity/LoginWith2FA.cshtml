@page
@model WebApp2.Pages.Identity.LoginWith2FAModel
@{
}

<div class="row">
    <div class="col-4">
        <section class="my-5">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <p>Please provide your 2FA code to proceed</p>
            <div class="row">
                <div>
                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="needs-validation" novalidate>
                        <input asp-for="RememberMe" type="hidden" />

                        <!-- Add this line -->
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group d-inline-block">
                            <label asp-for="Input.TwoFactorCode"></label>
                            <input asp-for="Input.TwoFactorCode" class="form-control position-relative" autocomplete="off" required />

                            <div class="invalid-feedback position-absolute w-auto">
                                The Authenticator code field is required.
                            </div>
                        </div>
                        <div class="d-inline-block form-group">
                            <button type="submit" class="btn btn-primary text-uppercase">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>
